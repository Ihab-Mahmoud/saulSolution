@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Id != 0 ? "Update" : "Create") Company
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="@Model.Id" hidden />
            <div class="row">
                <div>
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Name" class="form-control shadow border-0" />
                            <label asp-for="@Model.Name" class="ms-2"></label>
                            <span asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.City" class="form-control shadow border-0" />
                            <label asp-for="@Model.City" class="ms-2"></label>
                            <span asp-validation-for="@Model.City"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.State" class="form-control shadow border-0" />
                            <label asp-for="@Model.State" class="ms-2"></label>
                            <span asp-validation-for="@Model.State"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PostalCode" class="form-control shadow border-0" />
                            <label asp-for="@Model.PostalCode" class=" ms-2"></label>
                            <span asp-validation-for="@Model.PostalCode"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.StreetAddress" class="form-control shadow border-0" />
                            <label asp-for="@Model.StreetAddress" class="ms-2"></label>
                            <span asp-validation-for="@Model.StreetAddress"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.PhoneNumber" class="form-control shadow border-0" />
                            <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                            <span asp-validation-for="@Model.PhoneNumber"></span>
                        </div>
                      
                        <div class="row pt-2 w-100">
                            <div class="col-6 col-mid-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control rounded-2">Update</button>

                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control rounded-2">Create</button>

                                }
                            </div>
                            <div class="col-6 col-mid-3 ">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-secondary border rounded-2 w-100">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}        